{
  "name": "@forged/nextforge",
  "version": "0.1.0",
  "description": "A CLI tool for Next.js project scaffolding and management",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "nextforge": "./bin/nextforge.js"
  },
  "files": [
    "bin/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "zip:pr": "node scripts/zip-pr-diff.mjs",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "cli",
    "nextjs",
    "scaffolding",
    "generator",
    "tool"
  ],
  "author": "Forged",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "commander": "^11.1.0",
    "enquirer": "^2.4.1",
    "kleur": "^4.1.5",
    "ora": "^8.0.1",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/forged/nextforge.git"
  },
  "bugs": {
    "url": "https://github.com/forged/nextforge/issues"
  },
  "homepage": "https://github.com/forged/nextforge#readme"
}
