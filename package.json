{
  "name": "@forged/nextforge",
  "version": "0.1.0",
  "description": "A CLI tool for Next.js project scaffolding and management",
  "type": "module",
  "engines": {
    "node": ">=18.18.0"
  },
  "bin": {
    "nextforge": "./bin/nextforge.js"
  },
  "files": [
    "bin/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts --help",
    "cli": "node bin/nextforge.js",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:verify": "vitest run --config vitest.config.verify.ts",
    "test:watch": "vitest",
    "smoke": "node scripts/smoke-add-component.mjs",
    "smoke:add-component": "node scripts/smoke-add-component.mjs",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "zip:pr": "node scripts/zip-pr-diff.mjs",
    "verify": "npm run lint && npm run format:check && npm run typecheck && npm run build && npm run test:run && npm run test:verify && node bin/nextforge.js --help && node bin/nextforge.js doctor",
    "prepare": "husky",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "cli",
    "nextjs",
    "scaffolding",
    "generator",
    "tool"
  ],
  "author": "Forged",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "commander": "^11.1.0",
    "enquirer": "^2.4.1",
    "kleur": "^4.1.5",
    "ora": "^8.0.1",
    "picocolors": "^1.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forged/nextforge.git"
  },
  "bugs": {
    "url": "https://github.com/forged/nextforge/issues"
  },
  "homepage": "https://github.com/forged/nextforge#readme"
}
